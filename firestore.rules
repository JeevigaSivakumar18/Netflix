rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Movies collection — public read, admin-only writes
    match /movies/{movieId} {
      // Allow everyone to read movie docs (images are URLs inside the document)
      allow get, list: if true;

      // Only authenticated users with custom claim admin == true can create/update/delete
      allow create, update, delete: if request.auth != null
        && request.auth.token.admin == true;
    }

    // Per-user data (myList) — user can read/write their own document only
    match /users/{userId} {
      allow get, list: if request.auth != null && request.auth.uid == userId;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
